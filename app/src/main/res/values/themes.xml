        <!--        &lt;!&ndash; Secondary brand color. &ndash;&gt;-->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/orange</item> <!--selected date color-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CalendarWeekAppearance" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item> <!--sunday monday etc color-->
    </style>

    <style name="CalendarDateAppearance" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PurpleButtonStyle" parent="Theme.AppCompat">
        <item name="android:colorButtonNormal">@color/purple</item>
        <item name="android:colorBackground">@color/purple</item>
    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>

    <style name="Theme.Cookmark_App.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Cookmark_App.AppWidgetContainer" parent="Theme.Cookmark_App.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>


</resources>