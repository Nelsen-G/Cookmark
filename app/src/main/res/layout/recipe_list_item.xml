<!-- res/layout/activity_main.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="211dp"
    android:layout_height="223dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/background_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_medium"
            android:text="120 min"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_duration" />

        <ImageView
            android:id="@+id/ic_duration"
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_duration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recipe_servings"
            app:layout_constraintTop_toBottomOf="@+id/recipe_cookmarks" />

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_medium"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_cutlery" />

        <ImageView
            android:id="@+id/ic_cutlery"
            android:layout_width="11dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_cutlery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/foodtype_icon"
            app:layout_constraintTop_toTopOf="@+id/recipe_title" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medbold"
            android:text="@string/chicken_cordon_bleu"
            android:textColor="@color/purple"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/foodtype_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recipe_cookmarks" />

        <TextView
            android:id="@+id/recipe_cookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_99_cookmarked"
            android:textColor="@color/greyHint"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_photo" />

        <ImageView
            android:id="@+id/foodtype_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/ic_lunch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/recipe_photo"
            android:layout_width="211dp"
            android:layout_height="135dp"
            android:scaleType="centerCrop"
            android:src="@drawable/example_food1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cookmark_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_uncookmarked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
