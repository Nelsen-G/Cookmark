<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="10dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/manage_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="About"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- App Description -->
    <TextView
        android:id="@+id/about_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/purple"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Welcome to CookMark – your go-to app for exploring delicious recipes based on the ingredients you have at home. Discover a world of culinary possibilities right in your kitchen!"/>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray" />

    <!-- Additional Information or Features -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/purple"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Key Features:"
        android:textStyle="bold"/>

    <!-- List of Features -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/purple"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:text="• Explore a variety of recipes based on your available ingredients."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/purple"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:text="• Plan your meals and create shopping lists."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/purple"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:text="• Save your favorite recipes for quick access."/>

        <!-- Add more features as needed -->

    </LinearLayout>

</LinearLayout>
